@using Web_food.Models

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="all-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Quản lý đơn hàng </h4>
                    @* <div class="add-product"> *@
                    @*     @Html.ActionLink("Thêm giỏ hàng", "them_gio_hang", "Admin") *@
                    @* </div> *@
                    <table>
                        <tr>
                            <th>ID đơn hàng</th>
                            <th>Tên khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Trạng thái</th>
                            <th>Ngày đặt hàng</th>
                            <th>Tổng tiền</th>
                            <th>Thao tác</th>
                        </tr>
                        @foreach (Order order in Model)
                        {
                            <tr>
                                <td>
                                    @order.id
                                </td>
                                <td>
                                    @order.username
                                </td>
                                <td>
                                    @order.phone
                                </td>
                                <td >
                                  @order.status
                                </td>
                                <td>
                                    @order.date
                                </td>
                                <td>
                                    @order.total
                                </td>
                                <td>
                                    <a href="@Url.Action("chi_tiet_don_hang", "Admin", new {idi = @order.id})">
                                        <button data-toggle="tooltip" title="Detail" class="pd-setting-ed">
                                            <i
                                                class="fa fa-pencil-square-o" aria-hidden="true">
                                            </i>
                                        </button>
                                    </a>
                                    <a onclick="return confirm('Bạn có chắc muốn xóa')"
                                       href="@Url.Action("del_oder", "Admin", new {idi = @order.id})">
                                        <button data-toggle="tooltip" title="Trash" class="pd-setting-ed">
                                            <i
                                                class="fa fa-trash-o" aria-hidden="true">
                                            </i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }


                    </table>


                </div>
            </div>
        </div>
    </div>
</div>