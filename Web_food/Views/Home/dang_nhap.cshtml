@model dynamic

@{
    ViewBag.Title = "Dang nhap";

}

<div class="col">
    <button class="bg-danger">ĐĂNG NHẬP HỆ THỐNG</button>
</div>
<form class="form-signin" method="post" action="@Url.Action("dang_nhap", "Home")">
    <p style="color: red">@ViewBag.error</p>
    <div class="form-label-group">
        Email
        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
        <!--            <label for="inputEmail">Email address</label>-->
    </div>

    <div class="form-label-group">
        Mật khẩu
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
        <!--            <label for="inputPassword">Password</label>-->
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">ĐĂNG NHẬP</button>
    <p class="mt-5 mb-3 text-muted text-center">
        <a href="@Url.Action("Index", "Home")"> Quên mật khẩu</a>
    </p>
    <p class="mt-3 mb-3 text-muted text-center">Bạn chưa có tài khoản, vui lòng đăng ký <a href="@Url.Action("dang_ky", "Home")">tại đây.</a>
    <p class="mt-3 mb-3 text-muted text-center">hoặc đăng nhập bằng </p>
    <button class="btn btn-lg btn-primary btn-block"><i class="fab fa-facebook-f"></i> Facebook</button>
    <button class="btn btn-lg btn-danger btn-block"><i class="fab fa-google-plus-g"></i> Google</button>
</form>

<hr class="featurette-divider">