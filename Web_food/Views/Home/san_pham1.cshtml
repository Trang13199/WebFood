@using PagedList.Mvc
@model PagedList.IPagedList<Product>
@using Web_food.Models
@{
    List<ProductType> types = ViewBag.type;
    List<Product> list = ViewBag.list;
    // List<Product> pages = ViewBag.page;
}
<main role="main">
    <div class="col">
        <button class="" style="background:  #ff363f"> SẢN PHẨM</button>
    </div>
</main>
<div class="nav">
    <nav class="pull-left row  col-lg-3">
        <div class="list-group col-sm-12" style="margin-top: 30px">
            <a href="@Url.Action("san_pham","Home")" class="list-group-item list-group-item-danger active">
                SẢN PHẨM
            </a>
            @foreach (var t in types)
                              {
                                  <a href="@Url.Action("san_pham1","Home", new {type = @t.Id})" 
                                     class="list-group-item list-group-item-action">@t.Name</a>
                              }
        </div>
    </nav>
    <div class="container marketing col-lg-9">
        <div class="row">
            @{
                foreach (var p in list)
                {
                     
                    <div class="card" style="width: 17rem;">
                        <a href="@Url.Action("chi_tiet_sp", "Home", new { ids = @p.Id })">
                            <img src="@p.Images" class="card-img" alt="..." style="height: 17rem">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@p.Name</h5>
                            <p class="card-text">@p.Price.ToString("#,##0").Replace(',', '.') VNĐ </p>
                            <div class="cart">
                                <a href="@Url.Action("gio_hang", "Home")"> <button>Mua hàng</button></a>
                                <a href="@Url.Action("ThemVaoGio", "Home", new {SanPhamID = @p.Id})">
                                    <span style="font-size: 20px; color: #ff363f; margin-left: 5px">
                                        <i class="fas fa-shopping-basket"></i></span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <br />
    </div>
</div>
<hr class="featurette-divider">

