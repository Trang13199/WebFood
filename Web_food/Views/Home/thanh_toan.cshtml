@model dynamic

@{
    ViewBag.Title = "Thanh toán";
    <link rel="stylesheet" href="~/CSSWeb/style.css">

}

<div class="container marketing">
    <h1 class="title"><span>Thanh toán</span></h1>
    <div class="steps clearfix">
        <ul class="clearfix">
            <li class="cart active col-md-2 col-xs-12 col-sm-4 col-md-offset-3 col-sm-offset-0 col-xs-offset-0"><span><i class="fa fa-shopping-cart"></i></span><span>Giỏ hàng của tôi</span><span class="step-number"><a>1</a></span></li>
            <li class="payment active col-md-2 col-xs-12 col-sm-4"><span><i class="fas fa-dollar-sign"></i></span><span>Thanh toán</span><span class="step-number"><a>2</a></span></li>
            <li class="finish col-md-2 col-xs-12 col-sm-4"><span><i class="fas fa-check"></i></span><span>Hoàn tất</span><span class="step-number"><a>3</a></span></li>
        </ul>
    </div>

    <form class="payment-block clearfix" id="checkout-container" ng-submit="checkout()" style="display: flex">
        <div class="row col-md-12">
        <div class="col-md-6 col-sm-12 col-xs-12 payment-step step2">
            <div class="row">
                <div class="card" style="width: 100%;" >
                    <h4 style="padding-left: 15px;" >1. Địa chỉ thanh toán và giao hàng</h4>
                    <div class="card-body" style="text-align: left;">
                        <div class="form-block" ng-if="CustomerId<=0">
                            <div class="user-login">
                                @Html.ActionLink("  Đăng ký tài khoản mua hàng | ","dang_ky","Home")
                                @Html.ActionLink("  Đăng nhập","dang_nhap","Home")
                            </div><br>
                            <label style="color: black">Mua hàng không cần tài khoản</label>
                            <div class="form-group"><input class="form-control" placeholder="Họ & Tên" type="text" ng-model="$parent.CustomerName" required /></div>
                            <div class="form-group"><input class="form-control" placeholder="Số điện thoại" type="text" ng-model="$parent.CustomerPhone" required /></div>
                            <div class="form-group"><input class="form-control" placeholder="Email" type="email" ng-model="$parent.CustomerEmail" required /></div>
                            <div class="form-group"><input class="form-control" placeholder="Tỉnh/TP" type="text" ng-model="$parent.CustomerAddress" required /></div>
                            <div class="form-group"><input class="form-control" placeholder="Quận/Huyện" type="text" ng-model="$parent.CustomerAddress" required /></div>
                            <div class="form-group"><input class="form-control" placeholder="Địa chỉ" type="text" ng-model="$parent.CustomerAddress" required /></div>
                            <textarea class="form-control" rows="4" placeholder="Ghi chú đơn hàng" ng-model="$parent.Description"></textarea>
                            <div class="form-group" style="width: 50%;float:left; margin-top: 30px">
                                <div class="col-sm-offset-4 col-sm-6">
                                    <button type="submit" class="btn btn-danger">Hủy bỏ</button>
                                </div>
                            </div>
                                <div class="form-group" style="width: 50%; float: right; margin-top: 30px;">
                                    <div class="col-sm-offset-4 col-sm-12">
                                        <button type="submit" class="btn btn-primary">Giao đến địa chỉ này</button>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 col-xs-12 payment-step step1" style="float:right;">
            <div class="row">
                <div class="card" style="width: 100%;" >
                    <h4 style="padding-left: 15px;">2. Thông tin đơn hàng</h4>
                    <div class="card-body" style="text-align: left;">

            <div class="step-preview">
                <div class="cart-info">
                    <div class="cart-items">
                    </div>
                    <div class="total-price" style="color:#000;">
                        <p> Thành tiền  </p>
                        <label> 25.000 đ</label>
                    </div>
                    <div class="shiping-price" style="color:#000;">
                        <p>  Phí vận chuyển  </p>
                        <label>10.000 đ ₫</label>
                    </div>
                    <div class="use-coupon hidden">
                        <div class="form-group">
                            <input placeholder="Nhập mã giảm giá" class="coupon-code form-control"style="margin-bottom: 20px;"/>
                            @* <a class="btn btn-primary">Sử dụng</a> *@
                        </div>
                    </div>
                    <div class="total-payment" style="color:#000;">
                      <p>  Thanh toán</p>
                        <label>35.000 ₫</label>
                    </div>
                    <div class="button text-right">
                        <a class="btn btn-primary" 
                        @Html.ActionLink("Đặt hàng","dat_hang","Home")></a>
                    </div>
                </div>
            </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
 <hr class="featurette-divider">


</div><!-- /.container -->



