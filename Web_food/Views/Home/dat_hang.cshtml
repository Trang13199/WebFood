@using Web_food.Models
@{
    List<Order> orders = ViewBag.list_order;
}
<h1 style="color:red;">THANH TOAN THANH CONG</h1>
<br/>
  
<div class="container marketing">
    @foreach (Order order in orders)
     {
         <div class="payment-order clearfix">
             <h3>Mã đơn hàng của bạn: <b>#@order.id</b></h3>
             <p>Tên khách hàng: <b>@order.username</b></p>
             <p>Số điện thoại: <b>@order.phone</b></p>
             <p>Địa chỉ giao hàng: <b>@order.address</b></p>
             <p>Ngày đặt: <i>@order.date</i></p>
             <p>Số lượng: <b>@order.sum sản phẩm</b></p>
             <p>Tổng tiền: <b>@order.total VNĐ</b></p>
         </div>
         <br/>
    }
    <h4>Thông tin đơn hàng</h4>
    <table class="table table-bordered">
        <tr>
            <th>Hình</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
        @foreach (System.Data.DataRow item in ViewBag.show.Rows)
        {
            <tr>
                <td class="text-center"><img src="@item["image"]" width="70" height="60"/> </td>
                <td>@item["name"] </td>
                <td>
                    @item["quantity"]
                </td>
                <td> @item["price"] VNĐ </td>
            </tr>
        }
    </table>
    <div class="clearfix col-md-12">
        <div class="button text-right">
            <a class="btn btn-default btn-danger" @Html.ActionLink("Tiếp tục mua hàng", "san_pham", "Home")></a>
        </div>
    </div>
    <hr class="featurette-divider">
</div>
 
